<resources>

    <declare-styleable name="MultilineScrollableContainer">
        <attr name="lineAmount" format="integer" />
        <attr name="lineOrientation" format="enum">
            <enum name="vertically" value="0"/>
            <enum name="horizontally" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="LabelWithAction">
        <attr name="borderColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="actionColor" format="color" />

        <attr name="leftActionSymbol" format="string" />
        <attr name="rightActionSymbol" format="string" />
        <attr name="labelName" format="string" />
    </declare-styleable>
</resources>