<resources
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- APP BAR AND STATUS BAR STUFF -->
        <!--<item name="android:statusBarColor">@color/colorAccent</item>-->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarText</item>
        <item name="android:actionMenuTextColor">@color/colorPrimaryText</item>
        <item name="android:actionMenuTextAppearance">@style/ActionBarText</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="actionBarTabTextStyle">@style/ActionBarText</item>
        <item name="actionMenuTextColor">@color/colorPrimaryText</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionMenuTextAppearance">@style/ActionBarText</item>

    </style>

    <style name="ActionBarText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/ActionBarText</item>
        <item name="android:backgroundSplit">@drawable/main_gradient</item>
        <item name="android:background">@drawable/main_gradient</item>
        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/ActionBarText</item>
        <item name="background">@drawable/main_gradient</item>
        <item name="backgroundSplit">@drawable/main_gradient</item>
    </style>

    <style name="AppTextSmallHead" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryDarkText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="AppTextSmallLabel" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryDarkText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="AppJokeText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryDarkText</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="AppLightButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/light_button</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>

        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="AppLightButtonSmall" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">0dip</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">0dp</item>

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
    </style>

</resources>
