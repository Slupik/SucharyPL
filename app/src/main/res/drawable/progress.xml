<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360"
                android:startColor="@color/colorPrimaryMid"
                android:endColor="@color/colorPrimaryLight"
                android:gradientRadius="360"
                android:type="linear" />
            <size
                android:height="1dp"
                android:width="1dp"/>
        </shape>
    </item>

</layer-list>